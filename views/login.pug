extends layout

block content
  .container
    h1 Login Page
    p.lead Say something worthwhile here.
    br
    form(role='form', action="/users/login",method="post", style='max-width: 300px;')
      .form-group
        input.form-control(type='text', name="email", placeholder='Enter Email')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      .btn-toolbar
        button#btnSubmit.btn.btn-primary.btn-sm(type='submit') Submit
        a(href='/')
        button#btnCancel.btn.btn-primary.btn-sm(type='button') Cancel
    div
      p If this is your first time here, please 
        a(href='/users/register') Register
