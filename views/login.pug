extends layout

block content
  .container.text-center
    h1 Welcome Back to TABR
    p.lead Please login below
    form(role='form', action="/users/login",method="post", style='max-width: 300px;')
    .form-group-inline
      .form-group
        input.form-control(type='text', name="email", placeholder='Enter Email')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      .btn-toolbar.btn-center
        button#btnSubmit.btn.btn-primary.btn-sm(type='submit') Submit
        a(href='/')
        button#btnCancel.btn.btn-primary.btn-sm(type='button') Cancel
    div
      p If this is your first time using TABR, please
        a(href='/users/register')  Register Here
